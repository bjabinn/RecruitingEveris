@using Recruiting.Application.FunnelProcesos.ViewModels
@using Recruiting.Application.Candidaturas.Enums
@using RecruitingWeb.Properties
@using Recruiting.Application.Usuarios.ViewModels

@model Recruiting.Application.Candidatos.ViewModels.CandidaturaModalRowViewModel


@{
    var UsuarioLogueado = (UsuarioRolPermisoViewModel)HttpContext.Current.Session["Usuario"];
    var CentroIdUsuarioLogueado = UsuarioLogueado.CentroIdUsuario;
}

<div class="row">
    @Edit.Text(Model.CandidaturaId.ToString(), "CandidaturaId", id: "CandidaturaId", htmlClass: "form-control hide")


    @if (CentroIdUsuarioLogueado == null || Model.CentroId == CentroIdUsuarioLogueado)
    {
        <a href="/Candidaturas/Details/@Model.CandidaturaId.ToString()" target="_blank" title="@Resources.HTML_Title_DetalleCandidatura" id="DetailButton">
            @Display.GlyphiconButton("glyphicon-eye-open icon action")
        </a>
    }

</div>


@helper GetDisabledClass(bool disable)
{
    var disabled = string.Empty;
    if (disable)
    {
        disabled = "disabled";
    }

    @disabled
}