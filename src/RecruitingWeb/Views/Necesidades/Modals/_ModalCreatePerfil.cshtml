@using RecruitingWeb.Helpers
@using Recruiting.Application.Candidaturas.ViewModel
@using Recruiting.Application.Necesidades.ViewModels
@using RecruitingWeb.Properties
@using RecruitingWeb.Models

@model Recruiting.Application.Necesidades.ViewModels.ModalEdicionPerfilViewModel

<div class="modal fade" id="modalCreatePerfil">

    @using (Html.BeginForm("SeguimientoGrupoNecesidad", "Necesidades", FormMethod.Post, new Dictionary<string, object> { { "id", "formModalCreatePerfil" } }))
    {
        <div class="modal-dialog modalBusquedaNecesidad">
            <div class="modal-content tablaNecesidadesCandidatura">
                <div class="modal-header">
                    <div class="row">
                        <div class="col-lg-8 text-left">
                            <h4 class="modal-title tituloModal">
                                @Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_CreandoPerfil
                            </h4>
                        </div>
                        <div class="col-lg-4 text-right">
                            <button type="button" class="btnCloseModal" data-dismiss="modal">@Display.GlyphiconButton("glyphicon-remove")</button>
                        </div>
                    </div>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="TipoPerfilId">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_Perfil</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.DropDownExtend("", "TipoPerfilId", Model.Perfil, htmlClass: "form-control", id: "TipoPerfilIdModalCreatePerfil")
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="TipoContratacionId">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_Contratacion</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.DropDownExtend("", "TipoContratacionId", Model.Contratacion, htmlClass: "form-control", id: "TipoContratacionIdModalCreatePerfil")
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="TipoTecnologiaId">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_Tecnologia</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.DropDownExtend("", "TipoTecnologiaId", Model.Tecnologia, htmlClass: "form-control", id: "TipoTecnologiaIdModalCreatePerfil")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="Modulo">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_Modulo</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.DropDownExtend("", "Modulo", Model.Modulo, htmlClass: "form-control", id: "ModuloModalCreatePerfil", required: false)
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="FechaCompromiso">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_FechaCompromiso</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.Date(null, "FechaCompromiso", id: "FechaCompromisoModalCreatePerfil", htmlClass: "form-control")
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="TipoServicioId">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_Servicio</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.DropDownExtend("", "TipoServicioId", Model.Servicio, htmlClass: "form-control", id: "TipoServicioIdModalCreatePerfil")
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group col-lg-4">
                            <div class="col-lg-12 title-form">
                                <label for="TipoPrevisionId">@Resources.HTML_Necesidades_SeguimientoGrupoNecesidadesModal_Prevision</label>
                            </div>
                            <div class="col-lg-12">
                                @Edit.DropDownExtend("", "TipoPrevisionId", Model.Prevision, htmlClass: "form-control", id: "TipoPrevisionIdModalCreatePerfil")
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" id="BtnAceptarModalCreatePerfil">@Resources.Boton_Aceptar</button>
                    </div>
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->
        </div>
    }
</div>


