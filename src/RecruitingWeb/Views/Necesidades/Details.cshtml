                            <div class="col-lg-12 title-form">
                                <label for="EstadoNecesidadId">@Resources.HTML_Necesidades_Details_Estado</label>
                            </div>
                            <div class="col-lg-12 content-form">
                                @Model.EstadoNecesidadNombre
                            </div>
                        </div>
                        <div class="form-group col-lg-4">
                        </div>
                        <div class="form-group col-lg-4">
                        </div>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="Nombre">@Resources.HTML_Necesidades_Details_Nombre</label>
                        </div>
                        <div class="col-lg-12 content-form">
                            @{
                                if (string.IsNullOrEmpty(Model.Nombre) || string.IsNullOrWhiteSpace(Model.Nombre))
                                {
                                    <p>@Resources.HTML_General_CampoVacio_Details_NA</p>;
                                }
                                else
                                {
                                    @Model.Nombre

                                }
                            }
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
