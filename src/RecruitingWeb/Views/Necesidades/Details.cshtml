@using RecruitingWeb.Properties
@using Recruiting.Application.Maestros.Enums

@model Recruiting.Application.Necesidades.ViewModels.CreateEditNecesidadViewModel

@{
    var Activo = Model.Activo;
    if (Activo == false)
    {
        Response.Redirect("/Shared/Borrado");
    }
}
<div class="row titlePage">
    <div class="col-lg-6">
        <h3>@Resources.HTML_Necesidades_Details_VerNecesidad</h3>
    </div>
</div>
<div class="row header-flap">
    <div class="btn-group" role="group">
        <a href="@Url.Action("Volver", "Necesidades")" class="btn btn-default">
            <span class="text">@Resources.HTML_BotonGenericoVolver</span>
        </a>
        <a href="@Url.Action("Edit", "Necesidades", new {  id = Model.NecesidadId })" class="btn btn-default">
            <span class="text">@Resources.HTML_Necesidades_Details_BotonEditarNecesidad</span>
        </a>
    </div>
    <div class="col-lg-6 removePadding">
        <h4 class="noMargin headerBox">
            @Resources.HTML_Necesidades_Details_DatosNecesidad
            @if (Model.GrupoNecesidad.HasValue)
            {
                @Resources.HTML_Necesidades_Edit_DelGrupo <a target="_blank" href="/Necesidades/SeguimientoGrupoNecesidad?grupoId=@Model.GrupoNecesidad.Value">@Model.GrupoNecesidad.Value</a>
            }
        </h4>
    </div>
</div>
