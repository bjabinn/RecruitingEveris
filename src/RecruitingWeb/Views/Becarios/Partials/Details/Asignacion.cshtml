@using RecruitingWeb.Helpers
@using RecruitingWeb.Properties

@model Recruiting.Application.Becarios.ViewModels.BecarioSeleccionViewModel

<div class="content-box">
    <div class="row section-header">
        <div class="col-lg-12">
            <h4>@Resources.HTML_Candidaturas_Asignacion_DatosAsignacion </h4>
        </div>
    </div>
    <div class="content-box-content">
        <div class="row form-row">
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>@Resources.HTML_Candidaturas_Asignacion_Jornada</label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @Model.BecarioAsignacion.AsistenciaNombre
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>@Resources.HTML_Candidaturas_Asignacion_Cliente</label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @Model.BecarioAsignacion.ClienteNombre
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>@Resources.HTML_Candidaturas_Asignacion_Proyecto</label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @Model.BecarioAsignacion.ProyectoNombre
                    </label>
                </div>
            </div>
        </div>
        <div class="row form-row">
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>
                        @Resources.HTML_Candidaturas_Asignacion_Responsable
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @Model.BecarioAsignacion.ResponsableNombre
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>@Resources.HTML_Candidaturas_Asignacion_Tutor</label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @Model.BecarioAsignacion.TutorNombre
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>@Resources.HTML_Candidaturas_Asignacion_CompletadoAsignacion</label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>                        
                        @(Model.CompletadoAsignacion ? @Resources.HTML_General_Si : @Resources.HTML_General_No)
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>