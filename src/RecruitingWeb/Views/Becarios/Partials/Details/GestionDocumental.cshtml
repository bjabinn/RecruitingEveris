@using RecruitingWeb.Helpers
@using RecruitingWeb.Properties

@model Recruiting.Application.Becarios.ViewModels.BecarioSeleccionViewModel

<div class="content-box">
    <div class="row section-header">
        <div class="col-lg-12">
            <h4>@Resources.HTML_Becarios_GestionDocumental_DatosGestionDocumental </h4>
        </div>
    </div>
    <div class="content-box-content">
        <div class="row form-row">
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>
                        @Resources.HTML_Becarios_GestionDocumental_FechaInicio
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @FormatHelper.Format(@Model.BecarioGestionDocumental.FechaInicio, "dd/MM/yyyy")
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>
                        @Resources.HTML_Becarios_GestionDocumental_FechaFin
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @FormatHelper.Format(@Model.BecarioGestionDocumental.FechaFin, "dd/MM/yyyy")
                    </label>
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>
                        @Resources.HTML_Becarios_GestionDocumental_FechaFinReal
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @FormatHelper.Format(@Model.BecarioGestionDocumental.FechaFinReal, "dd/MM/yyyy")
                    </label>
                </div>
            </div>
        </div>
        <div class="row form-row">
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label for="NumHoras">
                        @Resources.HTML_Becarios_GestionDocumental_NumHoras
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    @Model.BecarioGestionDocumental.NumHoras
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>
                        @Resources.HTML_Becarios_GestionDocumental_SubidaAnexo
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    @{
                        if (string.IsNullOrEmpty(Model.BecarioGestionDocumental.NombreAnexo))
                        {
                            @Resources.HTML_General_CampoVacio_Details_NA
                        }
                        else
                        {
                            @Edit.InputFileDownloadDig("DownloadAnexo", false, false, Model.BecarioGestionDocumental.NombreAnexo)
                        }
                    }
                </div>
            </div>
            <div class="form-group col-lg-4">
                <div class="col-lg-12 title-form">
                    <label>
                        @Resources.HTML_Becarios_GestionDocumental_CompletadaGestion
                    </label>
                </div>
                <div class="col-lg-12 content-form">
                    <label>
                        @(Model.CompletadoGestion ? @Resources.HTML_General_Si : @Resources.HTML_General_No)
                    </label>
                </div>
            </div>
        </div>
    </div>
</div>