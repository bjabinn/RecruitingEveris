@using RecruitingWeb.Properties

@model Recruiting.Application.Becarios.ViewModels.BecarioSeleccionViewModel

@{
    ViewBag.ModoConsulta = ViewBag.ModoConsulta ?? false;
}

<div class="row">
    <div class="content-box">
        <div class="content-box-content">
         
                <div class="row section-header">
                    <div class="col-lg-6">
                        <h4>@Resources.HTML_Becarios_GestionDocumental_DatosGestionDocumental </h4>
                    </div>
                </div>
           
            <div class="section-form-DatosBasicos" data-id="section-form-GestionDocumental">
                <div class="row form-row">
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="FechaInicio">
                                @Resources.HTML_Becarios_GestionDocumental_FechaInicio
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.DateTime(Model.BecarioGestionDocumental.FechaInicio, Model.BecarioGestionDocumental.AccessGestion + "FechaInicio", required: true, htmlClass: "form-control", id: "FechaInicio")
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="FechaFin">
                                @Resources.HTML_Becarios_GestionDocumental_FechaFin
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.DateTime(Model.BecarioGestionDocumental.FechaFin, Model.BecarioGestionDocumental.AccessGestion + "FechaFin", required: true, htmlClass: "form-control", id: "FechaFin")
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="FechaFinReal">
                                @Resources.HTML_Becarios_GestionDocumental_FechaFinReal
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.DateTime(Model.BecarioGestionDocumental.FechaFinReal, Model.BecarioGestionDocumental.AccessGestion + "FechaFinReal", required: false, htmlClass: "form-control", id: "FechaFinReal")
                        </div>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="NumHoras">
                                @Resources.HTML_Becarios_GestionDocumental_NumHoras
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.Text(Model.BecarioGestionDocumental.NumHoras.ToString(), Model.BecarioGestionDocumental.AccessGestion + "NumHoras", required: true,minValue:"1", htmlClass: "form-control", id: "NumHoras")
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label>@Resources.HTML_Becarios_GestionDocumental_SubidaAnexo</label>
                        </div>
                            @if (Model.BecarioGestionDocumental.NombreAnexo == null)
                            {
                                <div class="col-lg-12">
                                    @Edit.InputFileDig(false, false, "Anexo", Model.BecarioGestionDocumental.NombreAnexo, false)
                                </div>
                            }
                            else
                            {
                                <div class="col-lg-12">
                                    @Edit.InputFileDig(false, false, "Anexo", Model.BecarioGestionDocumental.NombreAnexo, true, "DescargarAnexo", "DescargarAnexo")
                                </div>
                            }
                    </div>
                    <div class="form-group col-lg-4 pt-22">
                        <div class="col-lg-4 title-form">
                            <label for="Filtrado">@Resources.HTML_Becarios_GestionDocumental_CompletadaGestion</label>
                        </div>
                        <div class="col-lg-8">
                            @Edit.CheckBoxDig(value: Model.CompletadoGestion, name: Model.AccessSeleccion + "CompletadoGestion", id: "CompletadoGestion", required: false, disabled: false)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
