@using RecruitingWeb.Components.Searchable
@using RecruitingWeb.Properties

@model Recruiting.Application.Becarios.ViewModels.BecarioSeleccionViewModel

@{
    ViewBag.ModoConsulta = ViewBag.ModoConsulta ?? false;
    string nombreResponsable = Model.BecarioAsignacion.AccessAsignacion + "ResponsableId";
    string nombreTutor = Model.BecarioAsignacion.AccessAsignacion + "TutorId";
}

<div class="row" id="regionAsignacion">
    <div class="content-box">
        <div class="content-box-content">
            <div class="row section-header">
                <div class="col-lg-6">
                    <h4>@Resources.HTML_Candidaturas_Asignacion_DatosAsignacion </h4>
                </div>
            </div>
            <div class="section-form-DatosBasicos" data-id="section-form-Asignacion">
                <div class="row form-row">
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="Asistencia">
                                @Resources.HTML_Candidaturas_Asignacion_Jornada
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.DropDownExtend(Model.BecarioAsignacion.Asistencia, Model.BecarioAsignacion.AccessAsignacion + "Asistencia", Model.TipoAsistenciaList, required: false, htmlClass: "form-control", id: "Asistencia")
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="Cliente">
                                @Resources.HTML_Candidaturas_Asignacion_Cliente
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.DropDownExtend(Model.BecarioAsignacion.Cliente, Model.BecarioAsignacion.AccessAsignacion + "Cliente", Model.ClienteList, required: false, htmlClass: "form-control", id: "Cliente")
                        </div>
                    </div>

                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="Proyecto">
                                @Resources.HTML_Candidaturas_Asignacion_Proyecto
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @Edit.DropDownExtend(Model.BecarioAsignacion.Proyecto, Model.BecarioAsignacion.AccessAsignacion + "Proyecto", Model.ProyectoList, required: false, htmlClass: "form-control", id: "Proyecto")
                        </div>
                    </div>
                </div>
                <div class="row form-row">
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="responsable">
                                @Resources.HTML_Candidaturas_Asignacion_Responsable
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @(Html.Searchable(nombreResponsable, Url)
                            .Id("ResponsableId")
                            .TextName(Model.BecarioAsignacion.AccessAsignacion + "ResponsableNombre")
                            .AddCssClass("form-control")
                            .Action("GetUsuariosByNombreUsuario", "Admin")
                            .Value(Model.BecarioAsignacion.ResponsableNombre, hiddenValue: Model.BecarioAsignacion.ResponsableId.ToString())
                            .Required(true))
                        </div>
                    </div>
                    <div class="form-group col-lg-4">
                        <div class="col-lg-12 title-form">
                            <label for="tutor">
                                @Resources.HTML_Candidaturas_Asignacion_Tutor
                            </label>
                        </div>
                        <div class="col-lg-12">
                            @(Html.Searchable(nombreTutor, Url)
                            .Id("TutorId")
                            .TextName(Model.BecarioAsignacion.AccessAsignacion + "TutorNombre")
                            .AddCssClass("form-control")
                            .Action("GetUsuariosByNombreUsuario", "Admin")
                            .Value(Model.BecarioAsignacion.TutorNombre, hiddenValue: Model.BecarioAsignacion.TutorId.ToString())
                            .Required(true))
                        </div>
                    </div>
                    <div class="form-group col-lg-4 pt-22">                        
                        <div class="col-lg-4 title-form">
                            <label for="Filtrado">@Resources.HTML_Candidaturas_Asignacion_CompletadoAsignacion</label>
                        </div>
                        <div class="col-lg-8">
                            @Edit.CheckBoxDig(value: Model.CompletadoAsignacion, name: Model.AccessSeleccion + "CompletadoAsignacion", id: "CompletadoAsignacion", required: false, disabled: false)
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div> 
</div>

