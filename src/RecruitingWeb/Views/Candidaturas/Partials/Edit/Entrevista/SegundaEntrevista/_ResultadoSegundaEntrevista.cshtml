@using RecruitingWeb.Properties
@using Recruiting.Application.Candidaturas.Enums;

@model Recruiting.Application.Candidaturas.ViewModel.ResultadoSegundaEntrevista

<div class="row form-row">
    <div class="form-group col-lg-4">
        <div class="col-lg-4 title-form">
            <label>@Resources.HTML_Candidaturas_ResultadoSegundaEntrevista_SuperaSegundaEntrevista</label>
        </div>
        <div class="col-lg-8">
            @Edit.CheckBoxTri("TriStatus2",(int)TipoDecisionEnum.SUPERA_SEGUNDA_ENTREVISTA, (int)TipoDecisionEnum.NO_SUPERA_SEGUNDA_ENTREVISTA, (int)TipoDecisionEnum.SIN_DECIDIR_SEGUNDA_ENTREVISTA, (Model.SuperaEntrevista2Id != null) ? Model.SuperaEntrevista2Id.Value : (int)TipoDecisionEnum.SIN_DECIDIR_SEGUNDA_ENTREVISTA)
            @Edit.Hidden(Model.SuperaEntrevista2Id, Model.AccessResultado2 + "SuperaEntrevista2Id")
        </div>
    </div>

    <div id="MotivoSegundaEntrevistaRegion">
        <div class="form-group col-lg-4">
            <div class="col-lg-5 title-form">
                <label for="AvisarAlCandidato">@Resources.HTML_Candidaturas_FeedbackSegundaEntrevista_NotificarDescarteCandidato</label>
            </div>
            <div class="col-lg-7">
                @Edit.CheckBoxDig(value: Model.NotificarDescarte, name: Model.AccessResultado2 + "NotificarDescarte", id: "NotificarDescarte", required: false, disabled: false)
            </div>
        </div>
        <div class="form-group col-lg-4">
            <div class="col-lg-12 title-form">
                <label for="MotivoId">@Resources.HTML_Candidaturas_ResultadoSegundaEntrevista_Motivo</label>
            </div>
            <div class="col-lg-12">
                @Edit.DropDownExtend(Model.MotivoId, Model.AccessResultado2 + "MotivoId", Model.MotivoDescarteList, htmlClass: "form-control", id: "MotivoSegundaEntrevistaId")
            </div>
        </div>
    </div>
</div>