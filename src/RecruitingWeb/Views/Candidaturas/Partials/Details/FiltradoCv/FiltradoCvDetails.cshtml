@using RecruitingWeb.Properties

@model Recruiting.Application.Candidaturas.ViewModel.CandidaturaFiltradoCvViewModel

@if (Model != null)
{
    <div class="row">
        <div class="content-box">
            <div class="content-box-content">
                <div class="row section-header">
                    <div class="col-lg-6">
                        <h4>@Resources.HTML_Candidaturas_FiltradoCv_FiltradoCv </h4>
                    </div>
                </div>
                <div class="content-box-content">
                    <div class="section-form-FiltradoCV" data-id="section-form-datosbasicos">
                        <div class="row form-row">
                            <div class="form-group col-lg-4">
                                <div class="col-lg-12 title-form">
                                    <label for="Filtrado">@Resources.HTML_Candidaturas_FiltradoCv_SuperaFiltrado</label>
                                </div>
                                <div class="col-lg-12 content-form">
                                    @(Model.Filtrado ? @Resources.HTML_General_Si : @Resources.HTML_General_No)
                                </div>
                                @if (!Model.Filtrado)
                                {
                                    <div id="RegionDescartar">
                                        <div class="col-lg-12 title-form">
                                            <label for="Descartarfuturascandidaturas">@Resources.HTML_Candidaturas_FiltradoCv_DescartarFuturasCandidaturas</label>
                                        </div>

                                        <div class="col-lg-12 content-form">
                                            @(Model.DescartarFuturasCandidaturas ? @Resources.HTML_General_Si : @Resources.HTML_General_No)
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="form-group col-lg-8">
                                <div class="col-lg-12 title-form">
                                    <label for="MotivosObervaciones">@Resources.HTML_Candidaturas_FiltradoCv_MotivosObservaciones</label>
                                </div>
                                <div class="col-lg-12 content-form">
                                    @{
                                        if (string.IsNullOrEmpty(Model.MotivosObservaciones) || string.IsNullOrWhiteSpace(Model.MotivosObservaciones))
                                        {
                                            @Resources.HTML_General_CampoVacio_Details_NA
                                        }
                                        else
                                        {
                                            @Html.Raw(Model.MotivosObservaciones)
                                        }
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div> <!-- End content-box-content -->
        </div> <!-- End .content-box -->
    </div> <!--End .Row-->
}
