@using RecruitingWeb.Properties
@using Recruiting.Application.Candidaturas.Enums;

@model Recruiting.Application.Candidaturas.ViewModel.CompletarCartaOferta


<div class="row form-row">
    <div class="form-group col-lg-4">
        <div class="col-lg-12 title-form">
            <label>@Resources.HTML_Candidaturas_CompletarCartaOferta_Acepta</label>
        </div>
        <div class="col-lg-12 content-form">
            @if (Model.SuperaCartaOferta == (int)TipoDecisionEnum.ACEPTA_CARTA_OFERTA)
            {
                @Resources.HTML_General_Si;
            }
            @if (Model.SuperaCartaOferta == (int)TipoDecisionEnum.NO_ACEPTA_CARTA_OFERTA)
            {
                @Resources.HTML_General_No;
            }
            @if (Model.SuperaCartaOferta == (int)TipoDecisionEnum.SIN_DECISION_CARTAOFERTA)
            {
                @Resources.HTML_General_Sin_Decidir;
            }
        </div>
    </div>
    <div class="form-group col-lg-4" name="MotivoRegion">
        <div class="col-lg-12 title-form">
            <label for="MotivoRechazoId">@Resources.HTML_Candidaturas_CompletarCartaOferta_MotivoRechazo</label>
        </div>
        <div class="col-lg-12 content-form">
            @{
                if (string.IsNullOrEmpty(Model.MotivoRechazoNombre) || string.IsNullOrWhiteSpace(Model.MotivoRechazoNombre))
                {
                    @Resources.HTML_General_CampoVacio_Details_NA
                }
                else
                {
                    @Model.MotivoRechazoNombre

                }
            }
        </div>
    </div>
</div>
<div class="row form-row" name="DatosIncorporacionRegion">
    <div class="form-group col-lg-4">
        <div class="col-lg-12 title-form">
            <label for="FechaIncorporacion">@Resources.HTML_Candidaturas_CompletarCartaOferta_FechaIncorporacion</label>
        </div>
        <div class="col-lg-12 content-form">
            @{
                if (Model.FechaIncorporacion.HasValue)
                {
                    @Model.FechaIncorporacion

                }
                else
                {
                    @Resources.HTML_General_CampoVacio_Details_NA
                }
            }
        </div>
    </div>
    <div class="form-group col-lg-4">
        <div class="col-lg-12 title-form">
            <label for="NecesidadId">@Resources.HTML_Candidaturas_CompletarCartaOferta_NecesidadCubre</label>
        </div>
        <div class="col-lg-12 content-form">
            @{
                if (string.IsNullOrEmpty(Model.NecesidadNombre) || string.IsNullOrWhiteSpace(Model.NecesidadNombre))
                {

                    @Resources.HTML_General_CampoVacio_Details_NA
                }
                else
                {
                    <a href="/Necesidades/Details/@Model.NecesidadId"> @Model.NecesidadNombre </a>
                }
            }

        </div>
    </div>
    <div class="form-group col-lg-4">
        <div class="col-lg-12 title-form">
            <label for="AsignadaCorrectamente">@Resources.HTML_Candidaturas_CompletarCartaOferta_CumpleNecesidad</label>
        </div>
        <div class="col-lg-12 content-form">
            @(Model.AsignadaCorrectamente == null ? @Resources.HTML_General_No : Model.AsignadaCorrectamente == true ? @Resources.HTML_General_Si : @Resources.HTML_General_No)
        </div>
    </div>
</div>





