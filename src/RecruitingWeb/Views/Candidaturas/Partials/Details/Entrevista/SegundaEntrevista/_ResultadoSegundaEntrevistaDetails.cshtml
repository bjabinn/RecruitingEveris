@using RecruitingWeb.Properties
@using Recruiting.Application.Candidaturas.Enums;


@model Recruiting.Application.Candidaturas.ViewModel.ResultadoSegundaEntrevista

<div class="row form-row">
    <div class="form-group col-lg-4">
        <div class="col-lg-12 title-form">
            <label>@Resources.HTML_Candidaturas_ResultadoSegundaEntrevista_SuperaSegundaEntrevista</label>
        </div>
        <div class="col-lg-12 content-form">
            @if (Model.SuperaEntrevista2Id == (int)TipoDecisionEnum.SUPERA_SEGUNDA_ENTREVISTA)
            {
                @Resources.HTML_General_Si;
            }
            @if (Model.SuperaEntrevista2Id == (int)TipoDecisionEnum.NO_SUPERA_SEGUNDA_ENTREVISTA)
            {
                @Resources.HTML_General_No;
            }
            @if (Model.SuperaEntrevista2Id == (int)TipoDecisionEnum.SIN_DECIDIR_SEGUNDA_ENTREVISTA)
            {
                @Resources.HTML_General_Sin_Decidir;
            }
        </div>
    </div>
    @if (Model.SuperaEntrevista2Id == (int)TipoDecisionEnum.NO_SUPERA_SEGUNDA_ENTREVISTA)
    {
        <div class="form-group col-lg-4" id="MotivoRegion">
            <div class="col-lg-12 title-form">
                <label for="MotivoId">@Resources.HTML_Candidaturas_ResultadoSegundaEntrevista_Motivo</label>
            </div>
            <div class="col-lg-12 content-form">
                @Model.MotivoNombre
            </div>
        </div>
        <div class="form-group col-lg-4">
            <div class="col-lg-12 title-form">
                <label for="AvisarAlCandidato">@Resources.HTML_Candidaturas_FeedbackSegundaEntrevista_NotificarDescarteCandidato</label>
            </div>
            <div class="col-lg-12 content-form">
                @(Model.NotificarDescarte ? @Resources.HTML_General_Si : @Resources.HTML_General_No)
            </div>
        </div>
    }
</div>

