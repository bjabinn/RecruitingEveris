@using RecruitingWeb.Properties

@model Recruiting.Application.Candidaturas.ViewModel.CandidaturaFiltradoCvViewModel

@if (Model != null)
{
    <!--  START Filtrado CV    -->
    <div class="row">
        <div class="content-box border-top-cero">
            <div class="content-box-content">   
                <div class="content-box-content">
                    <div class="section-form-FiltradoCV" data-id="section-form-datosbasicos">
                        <div class="row form-row">
                            <div class="form-group col-lg-4">
                                <div class="col-lg-4 title-form">
                                    <label for="Filtrado">@Resources.HTML_Candidaturas_FiltradoCv_SuperaFiltrado</label>
                                </div>
                                <div class="col-lg-8">
                                    @Edit.CheckBoxDig(value: Model.Filtrado, name: "Filtrado", id: "Filtrado", required: false, disabled: false)
                                </div>
                                <div id="RegionDescartar">
                                    <div class="col-lg-6 title-form">
                                        <label for="Descartarfuturascandidaturas">@Resources.HTML_Candidaturas_FiltradoCv_DescartarFuturasCandidaturas</label>
                                    </div>
                                    <div class="col-lg-6">
                                        @Edit.CheckBoxDig(value: Model.DescartarFuturasCandidaturas, name: "DescartarFuturasCandidaturas", id: "DescartarFuturasCandidaturas", required: false, disabled: false)
                                    </div>
                                </div>
                            </div>                            
                            <div class="form-group col-lg-8">
                                <div class="col-lg-12 title-form">
                                    <label for="MotivosObervaciones">@Resources.HTML_Candidaturas_FiltradoCv_MotivosObservaciones</label>
                                </div>
                                <div class="col-lg-12">                                    
                                    @Edit.TextAreaEditor(Model.MotivosObservaciones, "MotivosObservaciones", id: "MotivosObservaciones", rows: 8, required: false, htmlClass: "form-control")
                                </div>
                            </div>
                        </div>                       
                    </div>
                </div>
            </div> <!-- End content-box-content -->
        </div> <!-- End .content-box -->
    </div> <!--End .Row-->
}
